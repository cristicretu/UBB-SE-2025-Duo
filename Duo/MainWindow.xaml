<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Duo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Duo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Markdown Editor">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Markdown Editor" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,10"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Markdown Input -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <TextBox x:Name="MarkdownInput" 
                         AcceptsReturn="True" 
                         TextWrapping="Wrap" 
                         PlaceholderText="Enter your markdown here..."
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MinHeight="300"/>
            </Grid>
            
            <!-- Markdown Preview -->
            <Grid Grid.Column="1" Margin="10,0,0,0" Visibility="{x:Bind PreviewVisible, Mode=OneWay}">
                <ScrollViewer>
                    <WebView2 x:Name="MarkdownPreview" 
                              MinHeight="300"/>
                </ScrollViewer>
            </Grid>
        </Grid>
        
        <!-- Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="TogglePreviewButton" 
                    Content="Preview Markdown" 
                    Click="TogglePreviewButton_Click" 
                    Margin="0,0,10,0"/>
            <Button x:Name="ClearButton" 
                    Content="Clear" 
                    Click="ClearButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
